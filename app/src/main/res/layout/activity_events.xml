<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.EventsActivity">

    <androidx.appcompat.widget.Toolbar
        android:visibility="visible"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:text="Facilities"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/clubhouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Club House"
                android:textColor="@color/gen_black"
                android:textSize="12sp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_club_house">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pool"
                android:textColor="@color/gen_black"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_hot_pool">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gym"
                android:textColor="@color/gen_black"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_gym">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tennis"
                android:textColor="@color/gen_black"
                android:textSize="12sp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_tennis_court">
            </TextView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temple"
                android:textColor="@color/gen_black"
                android:textSize="12sp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_temple">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Meditation"
                android:textColor="@color/gen_black"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_meditation">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gym"
                android:textColor="@color/gen_black"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_gym">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club House"
                android:textColor="@color/gen_black"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_club_house">
            </TextView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>