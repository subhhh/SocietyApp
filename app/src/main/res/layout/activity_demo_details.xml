<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DemoDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dot_dark_screen1">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Services"
            android:textColor="@color/gen_black"
            android:textSize="18sp"
            android:layout_margin="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#CECDCD"
                android:fadingEdgeLength="5dp"
                android:requiresFadingEdge="horizontal"
                android:layout_weight="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Plumber"
                    android:textColor="@color/gen_black"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:layout_margin="5dp"
                    android:drawableTop="@drawable/ic_plumber">
                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/medicines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#CECDCD"
                android:fadingEdgeLength="5dp"
                android:requiresFadingEdge="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Electrician"
                    android:textColor="@color/gen_black"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:layout_margin="5dp"
                    android:drawableTop="@drawable/ic_electrician">
                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#CECDCD"
                android:fadingEdgeLength="5dp"
                android:requiresFadingEdge="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Maid"
                    android:textColor="@color/gen_black"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:layout_margin="5dp"
                    android:drawableTop="@drawable/ic_maid">
                </TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#CECDCD"
                android:fadingEdgeLength="5dp"
                android:requiresFadingEdge="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:drawableTop="@drawable/ic_security"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="Security"
                    android:textColor="@color/gen_black"
                    android:textSize="10sp">
                </TextView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Community Hall"
                android:textColor="@color/gen_black"
                android:textSize="18sp"
                android:gravity="start"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="end"
                />

        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#CECDCD"
                    android:fadingEdgeLength="5dp"
                    android:requiresFadingEdge="horizontal">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/community_hall_1"
                        android:scaleType="fitXY"/>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#CECDCD"
                    android:fadingEdgeLength="5dp"
                    android:requiresFadingEdge="horizontal">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/community_hall_1"
                        android:scaleType="fitXY"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#CECDCD"
                    android:fadingEdgeLength="5dp"
                    android:requiresFadingEdge="horizontal">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/community_hall_1"
                        android:scaleType="fitXY"/>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</LinearLayout>