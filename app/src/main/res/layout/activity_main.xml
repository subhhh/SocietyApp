<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:visibility="visible"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/maincontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:text="My Dashboard"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/visitorlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Visitor List"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_visitorslist">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/complaintslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Complaints"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_complaint">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/serviceslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Services"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_maintenance">
            </TextView>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/facilitieslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Facilities"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_amenities">
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/paymentlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Payments"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_billpyments">
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/parkinglist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Parking"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_car_parking">
            </TextView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/noticelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Notice"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_notice">
            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cctvfootage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CCTV"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_cctv">
            </TextView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#CECDCD"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Payments"
                android:textColor="@color/gen_black"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/ic_billpyments">
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/my_progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_below="@+id/imageViewLogo"
        android:indeterminateTint="@color/colorPrimary"
        />



</LinearLayout>