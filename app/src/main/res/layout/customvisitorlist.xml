<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:layout_marginTop="5dp"
        android:background="#CECDCD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_social"
                    android:visibility="gone"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/vistorid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:textColor="#000"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/vistornameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Alok Pati"
                            android:padding="2dp"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/flatnoTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:gravity="center"
                            android:text="B wing 303"
                            android:textColor="#000"
                            android:textSize="13sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/visitreasonTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="2dp"
                        android:layout_marginTop="5dp"
                        android:text="Family member"
                        android:textColor="#000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:visibility="gone"
                        android:textSize="13sp"
                        android:textColor="@color/gen_black"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textSize="13sp"
                            android:textColor="@color/gen_black"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textColor="@color/gen_black"
                            android:layout_weight="1"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/vehiclenameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="12sp"
                            android:drawableTop="@drawable/ic_car"
                            android:text="benz"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:textColor="@color/gen_black"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/vehicletypeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="12sp"
                            android:drawableTop="@drawable/ic_tire"
                            android:text="benz"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:textColor="@color/gen_black"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/vehiclenumberTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="12sp"
                            android:drawableTop="@drawable/ic_number"
                            android:text="benz"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:textColor="@color/gen_black"
                            android:layout_weight="1"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/visitornoTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:padding="2dp"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_call_24"
                            android:textColor="@color/gen_black"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/addressTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Thane"
                            android:padding="2dp"
                            android:textColor="#000"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/checkinTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28.09.2019, 8.00 AM"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_check_in"
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:textColor="#19751E"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/checkoutTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28.09.2019, 8.00 AM"
                            android:gravity="center"
                            android:padding="2dp"
                            android:drawableLeft="@drawable/ic_check_out"
                            android:textSize="12sp"
                            android:textColor="#E80E0E"
                            android:layout_weight="1" />

                    </LinearLayout>






                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>